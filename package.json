{
  "name": "shannon",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "temporal:server": "docker compose -f docker/docker-compose.temporal.yml up temporal -d",
    "temporal:server:stop": "docker compose -f docker/docker-compose.temporal.yml down",
    "temporal:worker": "node dist/temporal/worker.js",
    "temporal:start": "node dist/temporal/client.js",
    "temporal:query": "node dist/temporal/query.js",
    "web": "node dist/web/server.js",
    "web:build": "cd web && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --project integration",
    "test:e2e": "vitest run --project e2e"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.38",
    "@fastify/cors": "^11.0.1",
    "@fastify/static": "^8.1.0",
    "@temporalio/activity": "^1.11.0",
    "@temporalio/client": "^1.11.0",
    "@temporalio/worker": "^1.11.0",
    "@temporalio/workflow": "^1.11.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "better-sqlite3": "^11.9.1",
    "boxen": "^8.0.1",
    "chalk": "^5.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.3.3",
    "figlet": "^1.9.3",
    "gradient-string": "^3.0.0",
    "js-yaml": "^4.1.0",
    "zod": "^4.3.6",
    "zx": "^8.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
